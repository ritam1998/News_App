<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:statusBarColor">#00000000</item>
    </style>

    <!-- BriefNews Activity -->
    <style name="AppTheme.briefNews" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>
    <style name="Toolbar.TitleText" parent="AppTheme.briefNews">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/alegreya_sc</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!-- WebView Activity -->
    <style name="WebView" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- SplashScreen -->
    <style name="SplashScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/background_splashscreen</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
    </style>
</resources>